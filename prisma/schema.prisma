generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model user {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)
}

model museum {
  id          String @id @default(cuid())
  name        String
  location    String
  description String
  contacts    String
  arts        art[]
}

model art {
  id          String  @id @default(cuid())
  name        String
  image       String
  category    String  @unique
  artist      artist? @relation(fields: [artistid], references: [id])
  artistid    String?
  description String
  museum      museum? @relation(fields: [museumid], references: [id])
  museumid    String?
}

model artist {
  id          String  @id @default(cuid())
  name        String
  image       String?
  description String
  arts        art[]
}
